  <!-- 离开的卫星舱 -->
  <ThingDef ParentName="PRT_SkyfallerBase">
    <defName>PRT_KineticBombardmentSatellitePodLeaving</defName>
    <label>轨道轰炸卫星舱 (离开)</label>
    <graphicData>
      <texPath>Things/Building/PRT_KineticBombardmentSatellitePod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>1.9</drawSize>
    </graphicData>
    <skyfaller>
      <movementType>Decelerate</movementType>
      <reversed>true</reversed>
      <shadow>Things/Skyfaller/SkyfallerShadowDropPod</shadow>
      <shadowSize>(2, 2)</shadowSize>
      <anticipationSound>DropPod_Leaving</anticipationSound>
      <anticipationSoundTicks>-10</anticipationSoundTicks>
      <ticksToImpactRange><min>-40</min><max>-15</max></ticksToImpactRange>
    </skyfaller>
  </ThingDef>

