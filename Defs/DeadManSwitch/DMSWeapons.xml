    </graphicData>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>360</damageAmountBase>
      <armorPenetrationBase>1.98</armorPenetrationBase>
      <speed>240</speed>
      <explosionRadius>1.9</explosionRadius>
	  <arcHeightFactor>1.2</arcHeightFactor>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>Explosion_GiantBomb</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>

  <!-- 激光器（用于超重型机兵，反人员建筑专精） -->
  <ThingDef ParentName="DMS_AutomatroidHeavyGun" MayRequire="Aoba.DeadManSwitch.Core">
		<defName>DMS_Gun_LaserGun</defName>
		<label>寂灭青虹</label>
		<description>AHWP-35L(Advanced Heavy Weapon Projects，先进重型武器项目) “寂灭青虹”是一款76mm口径的电磁轨道射弹系统，其通过高能化学激光器与自适应光学镜组的结合，能在瞬息之间用毁灭性的光束横扫指定区域。其独特的波长变频技术可针对不同材质目标自动调节穿透模式，无论是熔穿装甲薄弱处还是引爆关键部件都游刃有余。</description>
		<weaponTags>
			<li>DMS_Tarbosaurus_Gun</li>
			<li>NoSwitch</li>
			<li>DMS_MechWeaponUltraHeavy</li>
			<li>AAC_AdvancedHeavyWeapon</li>
			<li>AAC_Mech_Laser</li>
		</weaponTags>
		<graphicData>
			<texPath>Things/DMS/DMS_Gun_LaserGun</texPath>
			<drawSize>3.25</drawSize>
		</graphicData>
		<statBases>
			<Mass>260</Mass>
			<WorkToMake>90000</WorkToMake>
		    <AccuracyTouch>0.86</AccuracyTouch>
			<AccuracyShort>0.92</AccuracyShort>
			<AccuracyMedium>0.94</AccuracyMedium>
			<AccuracyLong>0.78</AccuracyLong>
		    <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<researchPrerequisites>
				<li>DMS_PRT_AdvancedHeavyWeaponProject</li>
			</researchPrerequisites>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Tungsteel>350</Tungsteel>
			<ComponentStamped>12</ComponentStamped>
			<ComponentSpacer>8</ComponentSpacer>
			<ComponentFireControl>1</ComponentFireControl>
		</costList>
		<comps Inherit="False">
			<li>
				<compClass>CompEquippable</compClass>
			</li>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Styleable"/>
		</comps>
		<verbs>
			<li>
				<verbClass>Verb_ShootBeam</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<warmupTime>0.5</warmupTime>
				<range>49.9</range>
				<minRange>2.9</minRange>
				<beamFullWidthRange>8.9</beamFullWidthRange>
				<burstShotCount>48</burstShotCount>
				<showBurstShotStats>false</showBurstShotStats>
				<beamWidth>12</beamWidth>
				<ticksBetweenBurstShots>2</ticksBetweenBurstShots>
				<beamDamageDef>DMS_Beam_LaserGun</beamDamageDef>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>22</muzzleFlashScale>
				<soundCastBeam>BeamGraser_Shooting</soundCastBeam>
				<beamGroundFleckDef>Fleck_BeamBurn</beamGroundFleckDef>
				<beamFleckChancePerTick>0.32</beamFleckChancePerTick>
				<beamMaxDeviation>0.5</beamMaxDeviation>
				<beamCurvature>0</beamCurvature>
				<beamMoteDef>Mote_GraserBeamBase</beamMoteDef>
				<beamEndEffecterDef>GraserBeam_End</beamEndEffecterDef>
				<beamChanceToStartFire>0.85</beamChanceToStartFire>
				<beamChanceToAttachFire>0.85</beamChanceToAttachFire>
				<beamFireSizeRange>0.55~0.85</beamFireSizeRange>
				<beamLineFleckDef>Fleck_BeamSpark</beamLineFleckDef>
				<beamStartOffset>0.8</beamStartOffset>
				<beamLineFleckChanceCurve>
				<points>
					<li>(0, 0)</li>
					<li>(0.65, 0.4)</li>
					<li>(1, 0.75)</li>
				</points>
				</beamLineFleckChanceCurve>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(1.5,1.5)</drawSize>
				<offsets>
					<li>(1.0,0)</li>
					<li>(1.1,-0.1)</li>
				</offsets>
				<isAlternately>true</isAlternately>
			</li>
			<li Class="Fortified.HeavyEquippableExtension">
				<EquippableDef>UltraHeavyAutomatroid</EquippableDef>
			</li>
		</modExtensions>
	</ThingDef>

  <DamageDef>
    <defName>DMS_Beam_LaserGun</defName>
    <label>高能激光</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been beamed to death.</deathMessage>
    <hediff>BeamWound</hediff>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Bullet</impactSoundType>
    <armorCategory>Heat</armorCategory>
    <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
    <isRanged>true</isRanged>
    <makesAnimalsFlee>true</makesAnimalsFlee>
    <defaultDamage>32</defaultDamage>
    <defaultArmorPenetration>1.2</defaultArmorPenetration>
    <buildingDamageFactorImpassable>5</buildingDamageFactorImpassable>
    <buildingDamageFactorPassable>5</buildingDamageFactorPassable>
  </DamageDef>

  <!--重型机炮（用于重型机兵比如Iguna，小区域AOE）-->
  <ThingDef ParentName="DMS_AutomatroidHeavyGun">
		<defName>DMS_Gun_HeavyAutoCannon</defName>
		<label>金属风暴</label>
		<description>专为重型机兵设计的全自动压制武器，采用七根旋转炮管交替射击，形成足以撕裂装甲的金属洪流。通过电磁辅助装弹与液压缓冲系统，这套武器能在极短时间内倾泻出毁灭性的火力风暴，有效覆盖中近距离的集群目标或轻型载具。\n其模块化供弹系统支持穿甲弹、高爆弹等多种弹药快速切换，配合稳定炮架与智能火控，即使在全速射击时也能保持惊人精度。炮管表面的散热镀层大幅提升耐久性，确保持续作战能力。</description>
		<weaponTags>
			<li>DMS_MechWeaponUltraHeavy</li>
			<li>H_Gatling30mm</li>
			<li>AAC_UltraHeavyWeapon</li>
		</weaponTags>
		<graphicData>
			<texPath>Things/DMS/DMS_Gun_HeavyAutoCannon</texPath>
			<drawSize>2.75</drawSize>
		</graphicData>
		<statBases>
			<Mass>180</Mass>
			<WorkToMake>70000</WorkToMake>
			<AccuracyTouch>0.78</AccuracyTouch>
			<AccuracyShort>0.68</AccuracyShort>
			<AccuracyMedium>0.58</AccuracyMedium>
			<AccuracyLong>0.48</AccuracyLong>
			<RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
			<researchPrerequisites>
				<li>MultibarrelWeapons</li>
				<li>DMS_PRT_HeavyArmoredMech</li>
			</researchPrerequisites>
		</recipeMaker>
		<costList>
			<Tungsteel>300</Tungsteel>
			<ComponentStamped>10</ComponentStamped>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<verbs>
      <li>
				<verbClass>Fortified.Verb_ArcSprayProjectile</verbClass>
				<sprayWidth>4</sprayWidth>
				<sprayArching>2</sprayArching>
				<sprayThicknessCells>3</sprayThicknessCells>
				<sprayNumExtraCells>28</sprayNumExtraCells> <!-- 要大於或等於發射次數 -->
				<consumeFuelPerBurst>1</consumeFuelPerBurst>

				<ticksBetweenBurstShots>2</ticksBetweenBurstShots>
				<burstShotCount>28</burstShotCount>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DMS_Bullet_HeavyAutoCannon</defaultProjectile>
				<warmupTime>2.5</warmupTime>
				<minRange>7.9</minRange>
				<range>44.9</range>
				<soundCast>DMS_Shot_GAU</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>15</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<forcedMissRadius>0.1</forcedMissRadius>
			</li>
		</verbs>
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(3,1.75)</drawSize>
				<offsets>
					<li>(1.36,0)</li>
				</offsets>
				<isAlternately>false</isAlternately>
			</li>
			<li Class="Fortified.HeavyEquippableExtension">
				<EquippableDef>HeavyAutomatroid</EquippableDef>
			</li>
			<li Class="CombatExtended.GunDrawExtension" MayRequire="ceteam.combatextended">
				<CasingAngleOffset>110</CasingAngleOffset>
				<CasingOffset>(-0.5,-0.5)</CasingOffset>
			</li>
		</modExtensions>
	</ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>DMS_Bullet_HeavyAutoCannon</defName>
