		<weaponClasses>
			<li>RangedHeavy</li>
			<li>LongShots</li>
			<li>Ranged</li>
		</weaponClasses>
		<weaponTags>
			<li>DMS_MechWeaponHeavy</li>
			<li>A_SuppressWeaponHeavy</li>
			<li>AAC_HeavyWeapon</li>
		</weaponTags>
		<graphicData>
			<texPath>Things/DMS/DMS_Gun_MediumAutoCannon</texPath>
			<drawSize>2.25</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>40000</WorkToMake>
			<AccuracyTouch>0.68</AccuracyTouch>
			<AccuracyShort>0.75</AccuracyShort>
			<AccuracyMedium>0.85</AccuracyMedium>
			<AccuracyLong>0.72</AccuracyLong>
			<Mass>120</Mass>
			<RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<researchPrerequisites>
				<li>MultibarrelWeapons</li>
