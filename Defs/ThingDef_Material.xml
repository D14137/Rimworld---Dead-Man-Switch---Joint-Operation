<Defs>
  
   <ThingDef ParentName="ResourceBase">
    <defName>BWA_AramidCloth</defName>
    <label>碳合芳纶</label>
    <description>碳合芳纶是芳纶纤维的下一代强化版本，采用高压静电纺丝技术和碳纳米管增强工艺制成。其抗拉强度达到传统芳纶的3倍，同时重量减轻30%，并具备优异的耐高温和抗切割性能。由于特殊的分子交联结构，碳合芳纶能有效吸收子弹动能，甚至能抵御小口径穿甲弹的直接冲击，被广泛用于特种部队防弹衣、高机动外骨骼装甲以及航天器防护层。尽管价格昂贵，但它的出现彻底改变了个人防护装备的极限</description>
    <graphicData>
      <texPath>Things/Materials/CarbonAramidCloth</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
	    <drawSize>1.5</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <MarketValue>9.5</MarketValue>
      <Mass>0.025</Mass>
      <Flammability>0.15</Flammability>
      <DeteriorationRate>3</DeteriorationRate>
      <StuffPower_Armor_Sharp>2.10</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>1.85</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>1.85</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>34</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>42</StuffPower_Insulation_Heat>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>40</minRewardCount>
    <stuffProps>
      <categories>
        <li>Fabric</li>
      </categories>
      <commonality>0.10</commonality>
      <color>(250,250,255)</color>
      <statFactors>
        <Flammability>0.15</Flammability>
        <MaxHitPoints>3.6</MaxHitPoints>
        <Beauty>5.5</Beauty>
      </statFactors>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <allowedArchonexusCount>150</allowedArchonexusCount>
  </ThingDef>

  <RecipeDef MayRequire="Aoba.DeadManSwitch.Core">
    <defName>DMS_Make_AramidCloth</defName>
    <label>制作碳合芳纶x80</label>
    <description>通过大型工业设备生产碳合芳纶</description>
    <jobString>Fabricating.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <recipeUsers>
      <li>DMS_LabReactor</li>
      <li>DMS_ReactionChamber</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMS_PRT_AdvancedLiningMaterial</researchPrerequisite>
    <workAmount>20000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Synthread</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
        <li>Synthread</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <BWA_AramidCloth>80</BWA_AramidCloth>
    </products>
  </RecipeDef>

  <RecipeDef MayRequire="Aoba.DeadManSwitch.Core">
    <defName>DMS_Make_Mass_AramidCloth</defName>
    <label>制作碳合芳纶x400</label>
    <description>通过大型工业设备大批量生产碳合芳纶，此量产配方可以稍微减少耗时</description>
    <jobString>Fabricating.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <recipeUsers>
      <li>DMS_ReactionChamber</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMS_PRT_AdvancedLiningMaterial</researchPrerequisite>
    <workAmount>75000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>300</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Synthread</li>
          </thingDefs>
        </filter>
        <count>400</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
        <li>Synthread</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <BWA_AramidCloth>400</BWA_AramidCloth>
    </products>
  </RecipeDef>
  
</Defs>