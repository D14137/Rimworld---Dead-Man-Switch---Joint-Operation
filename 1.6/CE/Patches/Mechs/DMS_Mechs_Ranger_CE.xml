<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>高周波刃</label>
							<capacities>
								<li>Cut</li>
							</capacities>
							<power>24</power>
							<cooldownTime>1.2</cooldownTime>
							<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
							<armorPenetrationSharp>24</armorPenetrationSharp>
							<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>高周波刃</label>
							<capacities>
								<li>Stab</li>
							</capacities>
							<power>38</power>
							<cooldownTime>1.8</cooldownTime>
							<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
							<armorPenetrationSharp>32</armorPenetrationSharp>
							<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						</li>
					</tools>
				</value>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="DMS_Mech_Ranger"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>4</min>
							<max>6</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/statBases</xpath>
				<value>
					<CarryWeight>72</CarryWeight>
					<CarryBulk>42</CarryBulk>
					<AimingAccuracy>2.0</AimingAccuracy>
					<ShootingAccuracyPawn>1.8</ShootingAccuracyPawn>
					<MeleeDodgeChance>0.15</MeleeDodgeChance>
					<MeleeCritChance>0.12</MeleeCritChance>
					<MeleeParryChance>0.14</MeleeParryChance>
					<MaxHitPoints>200</MaxHitPoints>
					<NightVisionEfficiency>1.8</NightVisionEfficiency>
					<ReloadSpeed>1.2</ReloadSpeed>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/statBases/AimingDelayFactor</xpath>
				<value>
					<AimingDelayFactor>0.6</AimingDelayFactor>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>50</ArmorRating_Blunt>
				</value>
			</li>

			<!--only torso-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>18</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/statBases/ArmorRating_Heat</xpath>
				<value>
					<ArmorRating_Heat>0.4</ArmorRating_Heat>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/statBases</xpath>
				<value>
					<ArmorRating_Electric>0.4</ArmorRating_Electric>
				</value>
			</li>

			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/comps</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]</xpath>
					<value>
						<comps />
					</value>
				</nomatch>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Ranger"]/comps</xpath>
				<value>
					<li Class="CombatExtended.CompProperties_ArmorDurability">
						<Durability>1130</Durability>
						<Regenerates>true</Regenerates>
						<RegenInterval>1250</RegenInterval>
						<RegenValue>7</RegenValue>
						<Repairable>true</Repairable>
						<RepairIngredients>
							<Steel>2</Steel>
							<Tungsteel>2</Tungsteel>
						</RepairIngredients>
						<RepairTime>300</RepairTime>
						<RepairValue>200</RepairValue>
						<CanOverHeal>true</CanOverHeal>
						<MaxOverHeal>120</MaxOverHeal>
						<MinArmorPct>0.75</MinArmorPct>
					</li>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
