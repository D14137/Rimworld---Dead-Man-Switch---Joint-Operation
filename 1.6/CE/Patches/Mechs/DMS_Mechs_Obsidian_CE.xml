<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/PawnKindDef[defName="DMS_Mech_Obsidian"]</xpath>
				<value>
					<li Class="CombatExtended.LoadoutPropertiesExtension">
						<primaryMagazineCount>
							<min>7</min>
							<max>10</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]</xpath>
				<value>
					<li Class="CombatExtended.RacePropertiesExtensionCE">
						<bodyShape>QuadrupedTall</bodyShape>
					</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/PawnKindDef[defName="DMS_Mech_Obsidian"]</xpath>
				<value>
					<aiAvoidCover>true</aiAvoidCover>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/statBases</xpath>
				<value>
					<CarryWeight>170</CarryWeight>
					<CarryBulk>160</CarryBulk>
					<AimingAccuracy>1.0</AimingAccuracy>
					<ShootingAccuracyPawn>1.2</ShootingAccuracyPawn>
					<MeleeDodgeChance>0.05</MeleeDodgeChance>
					<MeleeCritChance>0.15</MeleeCritChance>
					<MeleeParryChance>0.18</MeleeParryChance>
					<MaxHitPoints>350</MaxHitPoints>
					<NightVisionEfficiency>1.35</NightVisionEfficiency>
					<ReloadSpeed>1.5</ReloadSpeed>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>186</ArmorRating_Blunt>
				</value>
			</li>

			<!--only torso-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>40</ArmorRating_Sharp>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/statBases/ArmorRating_Heat</xpath>
				<value>
					<ArmorRating_Heat>0.8</ArmorRating_Heat>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/statBases</xpath>
				<value>
					<ArmorRating_Electric>0.8</ArmorRating_Electric>
				</value>
			</li>

			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/comps</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]</xpath>
					<value>
						<comps />
					</value>
				</nomatch>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/comps</xpath>
				<value>
					<li Class="CombatExtended.CompProperties_ArmorDurability">
						<Durability>3050</Durability>
						<Regenerates>true</Regenerates>
						<RegenInterval>1250</RegenInterval>
						<RegenValue>18</RegenValue>
						<Repairable>true</Repairable>
						<RepairIngredients>
							<Steel>3</Steel>
							<Tungsteel>3</Tungsteel>
						</RepairIngredients>
						<RepairTime>300</RepairTime>
						<RepairValue>200</RepairValue>
						<CanOverHeal>true</CanOverHeal>
						<MaxOverHeal>320</MaxOverHeal>
						<MinArmorPct>0.7</MinArmorPct>
					</li>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DMS_Mech_Obsidian"]/tools</xpath>
				<value>
					<tools Inherit="False">
						<li Class="CombatExtended.ToolCE">
							<label>Left Leg</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>27</power>
							<cooldownTime>3.5</cooldownTime>
							<chanceFactor>0.2</chanceFactor>
							<surpriseAttack>
								<extraMeleeDamages>
									<li>
										<def>Stun</def>
										<amount>16</amount>
									</li>
								</extraMeleeDamages>
							</surpriseAttack>
							<armorPenetrationBlunt>18</armorPenetrationBlunt>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>Right Leg</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>27</power>
							<cooldownTime>3.5</cooldownTime>
							<chanceFactor>0.2</chanceFactor>
							<surpriseAttack>
								<extraMeleeDamages>
									<li>
										<def>Stun</def>
										<amount>16</amount>
									</li>
								</extraMeleeDamages>
							</surpriseAttack>
							<armorPenetrationBlunt>18</armorPenetrationBlunt>
						</li>
					</tools>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
