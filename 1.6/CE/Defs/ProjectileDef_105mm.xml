<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<ThingCategoryDef >
		<defName>Ammo105mmTC</defName>
		<label>105mm炮弹</label>
		<parent>AmmoShells</parent>
		<iconPath>UI/Icons/Ammo_105mmTC_Shell</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_105mmTC</defName>
		<label>105mm炮弹</label>
		<ammoTypes>
			<Ammo_105mmTC_HE>Bullet_105mmTC_HE</Ammo_105mmTC_HE>
			<Ammo_105mmTC_HEAT>Bullet_105mmTC_HEAT</Ammo_105mmTC_HEAT>
			<Ammo_105mmTC_Sabot>Bullet_105mmTC_Sabot</Ammo_105mmTC_Sabot>
		</ammoTypes>
		<similarTo>AmmoSet_HeavyCannon</similarTo>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="105mmTCBase" ParentName="HeavyAmmoBase" Abstract="True">
		<thingCategories>
			<li>Ammo105mmTC</li>
		</thingCategories>
		<stackLimit>25</stackLimit>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>25</Mass>
			<Bulk>60</Bulk>
		</statBases>
		<cookOffFlashScale>25</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
		<isMortarAmmo>true</isMortarAmmo>
	</ThingDef>
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="105mmTCBase">
		<defName>Ammo_105mmTC_HE</defName>
		<label>105mm高爆弹(HE)</label>
		<graphicData>
			<texPath>Things/Ammo/Cannon/Tank/HE</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>70</MarketValue>
			<Mass>32</Mass>
		</statBases>
		<ammoClass>GrenadeHE</ammoClass>
		<detonateProjectile>Bullet_105mmTC_HE</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base105mmTC" ParentName="BaseExplosiveBullet" Abstract="true">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>170</speed>
			<soundExplode>MortarBomb_Explode</soundExplode>
			<flyOverhead>false</flyOverhead>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Fleck_BigShell</casingMoteDefname>
			<casingFilthDefname>Filth_CannonAmmoCasings</casingFilthDefname>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base105mmTC">
		<defName>Bullet_105mmTC_HE</defName>
		<label>105mm高爆弹(HE)</label>
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<graphicData>
			<texPath>Things/Projectile/Cannon/HE</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bomb</damageDef>
			<damageAmountBase>320</damageAmountBase>
			<explosionRadius>4</explosionRadius>
			<soundExplode>MortarBomb_Explode</soundExplode>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>30</Fragment_Large>
					<Fragment_Small>70</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->
	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_105mmTC_HE</defName>
		<label>制作105mm高爆弹(HE) x5</label>
		<description>制作5发105mm高爆弹(HE)。</description>
		<jobString>制作5发105mm高爆弹(HE)。</jobString>
		<workAmount>7600</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>108</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>Chemfuel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_105mmTC_HE>5</Ammo_105mmTC_HE>
		</products>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
	</RecipeDef>

